<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/widget_margin"
    android:background="@color/colorLatte">

    <TextView
        android:id="@+id/appwidget_header"
        tools:text="@string/placeholder_widget_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_below="@id/appwidget_header"
        tools:text="@string/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin"
        android:text="@string/appwidget_text"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/textsize_xsmall"/>

</RelativeLayout>